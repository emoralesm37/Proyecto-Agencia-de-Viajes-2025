
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Lista de reservas
    </div>
    <div class="card-body">
        <a asp-action="Guardar" asp-controller="ReservaVuelo" class="btn btn-success"><i class="bi bi-plus-circle"></i> Crear Nuevo</a>
        <hr />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Codigo</th>
                    <th>Turista</th>
                    <th>No. Vuelo</th>
                    <th>Clase</th>
                    <th>Fecha Reserva</th>
                    <th>Estado</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CodigoReservaVuelo</td>
                        <td>@item.CodigoTurista</td>
                        <td>@item.NumeroVuelo</td>
                        <td>@item.ClaseVuelo</td>
                        <td>@item.FechaReserva</td>
                        <td>@item.Estado</td>
                        <td>
                            <a asp-action="Editar" asp-controller="ReservaVuelo" class="btn btn-primary btn-sm" asp-route-CodigoReservaVuelo="@item.CodigoReservaVuelo">Editar</a>
                            <a asp-action="Eliminar" asp-controller="ReservaVuelo" class="btn btn-danger btn-sm" asp-route-CodigoReservaVuelo="@item.CodigoReservaVuelo">Eliminar</a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>

    </div>
</div>

