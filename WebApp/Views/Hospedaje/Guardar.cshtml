@using Proyectofinal.Models
@model Hospedaje
@{
    ViewData["Title"] = "Guardar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Registra hospedaje
    </div>
    <div class="card-body">


        <form asp-action="Guardar" asp-controller="Hospedaje" method="post">
            <div class="mb-3">
                <label class="form-label">Codigo</label>
                <input asp-for="CodigoHospedaje" type="text" class="form-control">
                <span asp-validation-for="CodigoHospedaje" class="text-danger"></span>
            </div>
            <!-- Dropdown para turista -->
            <div class="mb-3">
                <label class="form-label">Turista</label>
                <select asp-for="CodigoTurista" asp-items="ViewBag.Turista" class="form-control">
                    <option value="">Seleccione</option>
                </select>
                <span asp-validation-for="CodigoTurista" class="text-danger"></span>
            </div>

            <!-- Dropdown para hotel -->
            <div class="mb-3">
                <label class="form-label">Hotel</label>
                <select asp-for="CodigoHotel" asp-items="ViewBag.Hotel" class="form-control">
                    <option value="">Seleccione</option>
                </select>
                <span asp-validation-for="CodigoHotel" class="text-danger"></span>
            </div>
             <div class="mb-3">
                <label class="form-label">Fecha llegada:</label>
                <input asp-for="FechaLlegada" type="date" class="form-control" />
                <span asp-validation-for="FechaLlegada" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Fecha partida (fecha_partida > fecha_llegada):</label>
                <input asp-for="FechaPartida" type="date" class="form-control" />
                <span asp-validation-for="FechaPartida" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Régimen:</label>
                <select asp-for="Regimen" class="form-select">
                    <option value="">-- Seleccione --</option>
                    <option value="MEDIA_PENSION">Media Pensión</option>
                    <option value="PENSION_COMPLETA">Pensión Completa</option>
                </select>
                <span asp-validation-for="Regimen" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Fecha reserva:</label>
                <input asp-for="FechaReserva " type="date" class="form-control" />
                <span asp-validation-for="FechaReserva" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Estado:</label>
                <select asp-for="Estado" class="form-select">
                    <option value="">-- Seleccione --</option>
                    <option value="CONFIRMADA">Confirmada</option>
                    <option value="CANCELADA">Cancelada</option>
                    <option value="PENDIENTE">Pendiente</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>


            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Listar" asp-controller="Hospedaje" class="btn btn-warning">Volver a la lista</a>
        </form>


    </div>
</div>

