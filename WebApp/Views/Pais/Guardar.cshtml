@using Proyectofinal.Models
@model Pais
@{
    ViewData["Title"] = "Guardar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-header">
        Registrar Pais
    </div>
    <div class="card-body">


        <form asp-action="Guardar" asp-controller="Pais" method="post">
            <div class="mb-3">
                <label class="form-label">Codigo</label>
                <input asp-for="CodigoPais" type="text" class="form-control">
                <span asp-validation-for="CodigoPais" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Primer nombre:</label>
                <input asp-for="Nombre" type="text" class="form-control">
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Listar" asp-controller="Pais" class="btn btn-warning">Volver a la lista</a>
        </form>


    </div>
</div>